<!-- Author bio -->
<div class="content-block">
  <section class="section-block" id="section-about">
    <div class="container">
      <div class="row">
        <h2>About</h2>
        <button class="btn btn-primary" id='button-leave-message'>Leave a message</button>
        <button class="btn btn-warning btn-left-margin" id='button-review-message'>
          Review your messsages <span class="badge" id="comment-badge"><%= @comment_count %></span>
        </button>

      </div>
      <div class="panel panel-default" id="add-comment-form">
        <div class="panel-body">
          <%= render :partial => '/comments/form' %>
        </div>
      </div>
      <div class="panel panel-default" id="comment-list-panel">
        <ul class="list-group" id="comment-list">
          <% @comments.each do |comment| %>
            <%= render :partial => '/comments/show', :locals => { :comment => comment } %>
          <% end %>
        </ul>
      </div>
    </div>

  </section>

</div>


